{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Phase Evidence",
  "type": "object",
  "required": ["phaseId", "checks", "generatedAt"],
  "properties": {
    "phaseId": { "type": "string", "pattern": "^phase-[0-6]$" },
    "summary": { "type": "string" },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "passed", "timestamp"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "passed": { "type": "boolean" },
          "evidence": {
            "type": "array",
            "items": { "type": "string" }
          },
          "details": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" },
          "refs": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "endpoints": {
      "type": "object",
      "properties": {
        "/api/health": {},
        "/api/context": {}
      }
    },
    "artifacts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "ci": {
      "type": "object",
      "properties": {
        "lint": { "type": "string" },
        "typecheck": { "type": "string" },
        "tests": { "type": "string" },
        "size": { "type": "string" },
        "doctor": { "type": "string" },
        "indexEnsure": { "type": "string" },
        "smoke": { "type": "string" }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "cachedP95Ms": { "type": "number" }
      }
    },
    "generatedAt": { "type": "string", "format": "date-time" }
  }
}
