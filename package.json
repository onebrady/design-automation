{
  "name": "agentic-design-platform",
  "private": true,
  "version": "0.0.0",
  "description": "Agentic Design Intelligence Platform monorepo",
  "workspaces": [
    "apps/*",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "tests": "node scripts/discovery-tests.js || true",
    "size": "node scripts/size-baseline.js",
    "doctor": "node scripts/preflight-doctor.js",
    "index:ensure": "node scripts/index-ensure.js",
    "smoke": "node scripts/smoke-health-context.js",
    "start:server": "node apps/server/index.js",
    "pm2:start": "pm2 start ecosystem.config.js --only agentic-server",
    "pm2:start:dev": "pm2 start ecosystem.config.js --only agentic-server-dev",
    "pm2:stop": "pm2 stop agentic-server agentic-server-dev",
    "pm2:restart": "pm2 restart agentic-server agentic-server-dev",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit",
    "pm2:delete": "pm2 delete all",
    "validators": "node scripts/validate-brand.js || true",
    "engine:snapshots": "node scripts/run-engine-snapshots.js",
    "engine:guardrails": "node scripts/generate-guardrails-report.js",
    "cache:tests": "node scripts/cache-tests.js",
    "perf:cached": "node scripts/perf-cached.js",
    "plugin:tests": "node scripts/plugin-tests.js",
    "sdk:tests": "node scripts/sdk-tests.js",
    "sdk:auto": "node scripts/sdk-auto-tests.js",
    "phase5:accuracy": "node scripts/accuracy-phase5.js",
    "phase5:cache": "node scripts/cache-advanced.js",
    "phase5:analytics": "node scripts/analytics-rollup.js",
    "phase5:error": "node scripts/error-recovery-tests.js",
    "phase6:docs": "node scripts/docs-link-check.js",
    "phase6:examples": "node scripts/examples-run.js",
    "phase6:onboarding": "node scripts/onboarding.js",
    "phase6:migration": "node scripts/migration-tests.js",
    "evidence:validate": "node scripts/validate-evidence.js",
    "test:e2e": "playwright test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@playwright/test": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^9.9.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "typescript": "~5.6.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@types/multer": "^2.0.0",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "ioredis": "^5.7.0",
    "jsdom": "^26.1.0",
    "mongodb": "^6.8.0",
    "multer": "^2.0.2",
    "vm2": "^3.9.19",
    "ws": "^8.14.2"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "**/*.{js,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
