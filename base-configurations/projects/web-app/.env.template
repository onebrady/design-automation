# AI-Driven Design Automation System Configuration
# Copy this file to .env and update with your actual values

# API Server Configuration
AGENTIC_API_URL=http://localhost:8901
PORT=3000

# Database Configuration
AGENTIC_MONGO_URI=mongodb://localhost:27017
AGENTIC_DB_NAME=agentic_design

# Brand Pack Configuration
AGENTIC_BRAND_PACK_ID={{BRAND_PACK_ID}}
# Override brand pack auto-detection with specific ID

# AI Integration
ANTHROPIC_API_KEY={{YOUR_ANTHROPIC_API_KEY}}
# Required for AI component generation and advanced features
CLAUDE_MODEL=claude-3-5-sonnet-20241022
# Claude model version for AI operations

# System Behavior
AGENTIC_AUTO_APPLY=safe
# Options: safe, manual, off
# safe: Apply enhancements automatically with safety checks
# manual: Suggest enhancements, require manual approval
# off: Disable automatic enhancements

AGENTIC_STRICT=0
# Set to 1 to fail hard on errors instead of graceful degradation

AGENTIC_DISABLE=0
# Set to 1 to completely disable the design automation system

# Performance Settings
AGENTIC_AUTO_APPLY_MAX_CHANGES=10
# Maximum number of changes per file in auto-apply mode

AGENTIC_CACHE_EXPIRY=3600
# Cache expiry time in seconds

AGENTIC_MAX_CONCURRENT=3
# Maximum concurrent API requests

# Development Settings
DEBUG=agentic:*
# Enable debug logging (remove in production)

NODE_ENV=development
# Set to 'production' for production builds

# Feature Flags
AGENTIC_ENABLE_TYPOGRAPHY=true
AGENTIC_ENABLE_ANIMATIONS=true
AGENTIC_ENABLE_GRADIENTS=false
AGENTIC_ENABLE_SEMANTICS=true
AGENTIC_ENABLE_COMPONENTS=true
AGENTIC_ENABLE_LAYOUT=true

# Accessibility Settings
AGENTIC_WCAG_LEVEL=AA
# WCAG compliance level: A, AA, AAA

# Performance Targets
AGENTIC_PERF_BUDGET_JS=250000
# JavaScript bundle size budget in bytes
AGENTIC_PERF_BUDGET_CSS=50000
# CSS bundle size budget in bytes

# Team Collaboration
AGENTIC_SHARED_PATTERNS=true
# Enable shared pattern learning across team members

AGENTIC_METRICS_COLLECTION=true
# Enable collection of usage and performance metrics

# CI/CD Integration
AGENTIC_CI_ENABLED=false
# Enable CI/CD integration features

AGENTIC_CI_FAIL_ON_ERRORS=true
# Fail CI builds on design automation errors

# Reporting
AGENTIC_REPORTING_ENABLED=true
AGENTIC_REPORT_PATH=reports/design-automation
AGENTIC_REPORT_FORMATS=json,html

# Security
AGENTIC_SECURE_MODE=false
# Enable additional security checks (may impact performance)

# Advanced Configuration
AGENTIC_CUSTOM_RULES_PATH=.agentic/custom-rules.json
# Path to custom enhancement rules

AGENTIC_IGNORE_PATTERNS=node_modules/**,dist/**,build/**
# Additional patterns to ignore during enhancement