{
  "id": "{{PROJECT_NAME}}-component-library",
  "name": "{{PROJECT_NAME}} Component Library",
  "description": "Reusable component library with consistent design tokens and patterns",
  "version": "1.0.0",
  "type": "component-library",
  
  "metadata": {
    "created": "{{CURRENT_DATE}}",
    "author": "{{AUTHOR_NAME}}",
    "organization": "{{ORGANIZATION}}",
    "tags": ["components", "design-system", "reusable"],
    "framework": "{{FRAMEWORK}}"
  },
  
  "personality": {
    "modern_traditional": 7,
    "playful_serious": 5,
    "minimal_decorative": 8,
    "trustworthy_innovative": 6,
    "casual_professional": 7,
    "energetic_calm": 5
  },
  
  "tokens": {
    "colors": {
      "roles": {
        "primary": {
          "50": "#F0F9FF",
          "100": "#E0F2FE", 
          "200": "#BAE6FD",
          "300": "#7DD3FC",
          "400": "#38BDF8",
          "500": "#0EA5E9",
          "600": "#0284C7",
          "700": "#0369A1",
          "800": "#075985",
          "900": "#0C4A6E"
        },
        "neutral": {
          "50": "#F8FAFC",
          "100": "#F1F5F9",
          "200": "#E2E8F0", 
          "300": "#CBD5E1",
          "400": "#94A3B8",
          "500": "#64748B",
          "600": "#475569",
          "700": "#334155",
          "800": "#1E293B",
          "900": "#0F172A"
        },
        "semantic": {
          "success": "#10B981",
          "warning": "#F59E0B", 
          "error": "#EF4444",
          "info": "#3B82F6"
        }
      }
    },
    
    "typography": {
      "families": {
        "sans": "Inter, system-ui, sans-serif",
        "mono": "JetBrains Mono, Consolas, monospace"
      },
      "scale": {
        "xs": "12px",
        "sm": "14px", 
        "md": "16px",
        "lg": "18px",
        "xl": "20px",
        "2xl": "24px",
        "3xl": "30px",
        "4xl": "36px"
      },
      "weights": {
        "light": 300,
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      }
    },
    
    "spacing": {
      "scale": {
        "0": "0",
        "1": "4px",
        "2": "8px", 
        "3": "12px",
        "4": "16px",
        "5": "20px",
        "6": "24px",
        "8": "32px",
        "10": "40px",
        "12": "48px",
        "16": "64px"
      }
    },
    
    "radii": {
      "none": "0",
      "sm": "4px",
      "md": "6px",
      "lg": "8px", 
      "xl": "12px",
      "full": "9999px"
    },
    
    "shadows": {
      "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
      "md": "0 4px 6px -1px rgb(0 0 0 / 0.1)",
      "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1)",
      "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1)"
    },
    
    "animations": {
      "durations": {
        "fast": "150ms",
        "normal": "200ms",
        "slow": "300ms"
      },
      "easings": {
        "ease-out": "cubic-bezier(0, 0, 0.2, 1)",
        "ease-in": "cubic-bezier(0.4, 0, 1, 1)"
      }
    }
  },
  
  "components": {
    "button": {
      "variants": {
        "primary": {
          "backgroundColor": "var(--color-primary-500)",
          "color": "white",
          "borderRadius": "var(--radius-md)",
          "padding": "var(--spacing-2) var(--spacing-4)",
          "fontSize": "var(--font-size-sm)",
          "fontWeight": "var(--font-weight-medium)"
        },
        "secondary": {
          "backgroundColor": "transparent", 
          "color": "var(--color-primary-500)",
          "border": "1px solid var(--color-primary-500)",
          "borderRadius": "var(--radius-md)",
          "padding": "var(--spacing-2) var(--spacing-4)",
          "fontSize": "var(--font-size-sm)",
          "fontWeight": "var(--font-weight-medium)"
        }
      }
    }
  },
  
  "guidelines": {
    "consistency": {
      "enforceTokens": true,
      "validateContrast": true,
      "checkAccessibility": true
    },
    "accessibility": {
      "minContrast": 4.5,
      "wcagLevel": "AA",
      "focusVisible": true
    },
    "performance": {
      "maxBundleSize": "50kb",
      "treeshaking": true
    }
  }
}