{
  "name": "agentic-design-assistant",
  "displayName": "Agentic Design Assistant",
  "description": "Real-time design system integration with inline suggestions and brand token enhancements",
  "version": "0.1.0",
  "publisher": "agentic",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Linters"
  ],
  "keywords": [
    "design system",
    "css",
    "brand tokens",
    "automation",
    "enhancement"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agentic.enhanceFile",
        "title": "Enhance with Brand Tokens",
        "category": "Agentic"
      },
      {
        "command": "agentic.previewEnhancement",
        "title": "Preview Enhancement",
        "category": "Agentic"
      },
      {
        "command": "agentic.toggleAutoEnhancement",
        "title": "Toggle Auto Enhancement",
        "category": "Agentic"
      },
      {
        "command": "agentic.showProjectContext",
        "title": "Show Project Context",
        "category": "Agentic"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "agentic.enhanceFile",
          "when": "resourceExtname == .css || resourceExtname == .html",
          "group": "agentic"
        },
        {
          "command": "agentic.previewEnhancement",
          "when": "resourceExtname == .css",
          "group": "agentic"
        }
      ],
      "editor/title": [
        {
          "command": "agentic.enhanceFile",
          "when": "resourceExtname == .css || resourceExtname == .html",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Agentic Design",
      "properties": {
        "agentic.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Agentic design system integration"
        },
        "agentic.autoEnhancement": {
          "type": "boolean",
          "default": false,
          "description": "Automatically enhance files on save"
        },
        "agentic.serverUrl": {
          "type": "string",
          "default": "http://localhost:8901",
          "description": "Agentic API server URL"
        },
        "agentic.websocketUrl": {
          "type": "string",
          "default": "ws://localhost:8902",
          "description": "WebSocket server URL for real-time updates"
        },
        "agentic.maxChanges": {
          "type": "number",
          "default": 5,
          "description": "Maximum changes per enhancement"
        },
        "agentic.showInlineHints": {
          "type": "boolean",
          "default": true,
          "description": "Show inline enhancement hints"
        },
        "agentic.debounceMs": {
          "type": "number",
          "default": 500,
          "description": "Debounce delay for auto enhancement (ms)"
        }
      }
    },
    "colors": [
      {
        "id": "agentic.enhancementHint",
        "description": "Color for enhancement hints",
        "defaults": {
          "dark": "#4CAF50",
          "light": "#2E7D32"
        }
      },
      {
        "id": "agentic.errorHint",
        "description": "Color for enhancement errors",
        "defaults": {
          "dark": "#F44336",
          "light": "#C62828"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "ws": "^8.0.0"
  }
}