{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Phase Status",
  "type": "object",
  "required": ["phaseId", "name", "status", "updatedAt"],
  "properties": {
    "phaseId": { "type": "string", "pattern": "^phase-[0-9]$" },
    "name": { "type": "string" },
    "status": { "type": "string", "enum": ["planned", "in_progress", "blocked", "done"] },
    "owner": { "type": "string" },
    "start": { "type": "string", "format": "date-time" },
    "target": { "type": "string", "format": "date-time" },
    "completed": { "type": "string", "format": "date-time" },
    "ciRunId": { "type": "string" },
    "evidenceFile": { "type": "string" },
    "notes": { "type": "string" },
    "updatedAt": { "type": "string", "format": "date-time" }
  }
}
